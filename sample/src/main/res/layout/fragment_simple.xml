<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.link184.architecture.mvvm.widgets.PowerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:emptyStateLayoutId="@layout/test_layout"
        app:withRecyclerView="true"
        app:withSwipeRefreshLayout="true" />

    <Button
        android:id="@+id/addFewItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AddFewItems" />

    <Button
        android:id="@+id/removeFiewItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="removeFiewItems" />

    <Button
        android:id="@+id/removeAllItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="removeAllItems" />

</LinearLayout>